<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <PreferenceCategory app:title="Your Account">

        <EditTextPreference
            app:key="change_mp"
            app:title="Change MasterPassword" />

        <MultiSelectListPreference
            app:dialogTitle="Autofill"
            app:entries="@array/autofill"
            app:entryValues="@array/autofill_values"
            app:key="autofill1"
            app:summary="Press to show list"
            app:title="Autofill(cancelled)" />


    </PreferenceCategory>


    <PreferenceCategory app:title="Autofill">
        <SwitchPreferenceCompat
            app:key="allow_autofill"
            app:summary="will fill automatically your frequently used details while creating a new Record."
            app:title="Allow autofill" />

        <CheckBoxPreference
            app:dependency="allow_autofill"
            app:key="email"
            app:title="Email" />

        <CheckBoxPreference
            app:dependency="allow_autofill"
            app:key="username"
            app:title="Username" />

        <CheckBoxPreference
            app:dependency="allow_autofill"
            app:key="password"
            app:title="Password" />



    </PreferenceCategory>

    <PreferenceCategory app:title="Security Level">

        <ListPreference
            app:key="security_level"
            app:title="Change Security Level"
            app:entries="@array/security_level"
            app:entryValues="@array/security_level_values"
            app:defaultValue="Medium"/>


    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">

    </PreferenceCategory>
    <PreferenceCategory app:title="About">
        <Preference
            android:fragment="view.preferences.About_Fragment"
            app:key="about"
            app:summary="1.0.0"
            app:title="version" />


        <PreferenceScreen
            android:summary="press to see About"
            android:title="Header about(will be moved to AufoFill?)">



        </PreferenceScreen>

    </PreferenceCategory>


</PreferenceScreen>

